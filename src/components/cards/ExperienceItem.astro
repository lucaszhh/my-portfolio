---
import Button from "../shared/Button.astro";
import ArrowRight from "../icons/ArrowRight.astro";
const { title, description, link, date, linkDescription } = Astro.props;
---

<section class="section">
    <div
        class="absolute w-3 h-3 rounded-full -start-1.5 border border-neutral-800 bg-neutral-800 dot"
    >
    </div>
    <div class="md:hover:scale-110 md:hover:translate-x-10 transition">
        <div class="flex items-center">
            <time class="text-sm font-normal leading-none">{date} </time>
        </div>
        <h3 class="text-lg font-semibold text-[#63e] dark:text-yellow-200 mt-2">
            {title}
        </h3>
        <p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty">
            {description}
        </p>
        <a href={link}>
            <Button>
                <ArrowRight slot="after" />
                {linkDescription}
            </Button>
        </a>
    </div>
</section>

<style>
    .section:hover .dot{
        background-color: #63e;
        border-color: #63e;
    }
</style>