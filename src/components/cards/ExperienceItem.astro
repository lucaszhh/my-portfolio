---
import Button from "../shared/Button.astro"
import ArrowRight from "../icons/ArrowRight.astro"
const {title, description, link, date, linkDescription} = Astro.props
---

<section>

    <div class="flex items-center">
        <div
            class="absolute w-3 h-3 rounded-full -start-1.5 border border-neutral-800 bg-neutral-800"
        >
        </div>
        <time
            class=" text-sm font-normal leading-none text- dark:text-sky-200/80"
        >{date}
        </time>

    </div>
    <h3 class="text-lg font-semibold text-[#63e] dark:text-yellow-200 mt-2">
        {title}
    </h3>
    <p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty">
        {description}
    </p>
    <a href={link}>
        <Button>
            <ArrowRight slot="after"/>
            {linkDescription}
        </Button>
    </a>
</section>