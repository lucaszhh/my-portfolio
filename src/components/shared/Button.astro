---
const { className, onClick, id } = Astro.props;
---

<button
    id={id}
    onclick={onClick}
    class=`${className} w-auto flex items-center gap-2 border border-black bg-black text-white rounded-3xl hover:text-black dark:text-white hover:bg-white dark:hover:border-[#63e] dark:hover:bg-black dark:bg-[#63e] h-10 px-6 cursor-pointer active:scale-[1.1] transition-all duration-300 hover:shadow-lg `
>
    <slot name="before" />
    <span class="text-sm font-bold">
        <slot />
    </span>
    <slot name="after" />
</button>

<style>
    button {
        position: relative;
        overflow: hidden;
        z-index: 1;
    }</style>
