---
const { className, onClick, id } = Astro.props;
---

<button
    id={id}
    onclick={onClick}
    class=`${className} w-auto flex items-center gap-2 bg-black text-white rounded-3xl dark:text-white hover:bg-white dark:hover:text-black hover:text-black dark:bg-[#63e] h-10 px-6 cursor-pointer active:scale-[1.1] transition-all duration-300 `
>
    <slot name="before" />
    <span class="text-sm font-bold">
        <slot />
    </span>
    <slot name="after" />
</button>

<style>
    button {
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

    button::before {
        content: "";
        width: 0;
        height: 3em;
        position: absolute;
        top: 0;
        left: 0;
        background-image: linear-gradient(
            to right,
            rgb(254 240 138) 50%,
            #63e 100%
        );
        transition: 0.5s ease;
        display: block;
        z-index: -1;
    }

    button:hover::before {
        width: 100%;
    }
</style>
